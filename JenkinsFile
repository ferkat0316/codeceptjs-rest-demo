pipeline {
  agent any
    
  tools {NodeJs "node"}
    
  stages {
        
    stage('Git') {
      steps {
        git 'https://github.com/ferkat0316/codeceptjs-rest-demo/tree/master'
      }
    }
     
    stage('Build') {
      steps {
        sh 'npm install'
         sh '<<Build Command>>'
      }
    }  
    
            
    stage('Test') {
      steps {
        sh 'node test'
      }
    }
  }
}
